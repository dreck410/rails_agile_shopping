<h2>Cart of things you love</h2>
<ul>
<table>
	<%= render(cart.line_items) %>
	
	<tr class='total_line'>
		<td colspan="2">Total</td>
		<td class="total_cell">
			<%= number_to_currency(cart.total_price) %>
		</td>
	</tr>
</table>


</ul>
<%= button_to 'Empty Cart', cart, method: :delete, 
	data: { confirm: "Are you sure?" } %>